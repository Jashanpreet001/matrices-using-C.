#include<stdio.h>

int main(){
    
    int mat[3][3]={1,2,3,4,5,6,7,8,9};
    int i,j,r,c;
    r=c=3;
    
    printf("\n Matrix is \n");
    for(i=0;i<=r-1;i++)
    {
        for(j=0;j<=r-1;j++)
        {printf("%d\t",mat[i][j]);
        }
    printf("\n");
        
    }
    
    printf("\n Diagonal Elements \n");
   for(i=0;i<=r-1;i++)
    {
        for(j=0;j<=r-1;j++)
        { if(i+j==r-1)
        {printf("%d\t",mat[i][j]);
            
        }
        }
    printf("\t\n");
        
    }
    return 0;
}
