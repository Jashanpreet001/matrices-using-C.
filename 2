#include <stdio.h>

int main()
{
    int i, j, m, n;
    int matrix[10][20];

    printf("Enter number of rows : ");
    scanf("%d", &m);
    printf("Enter number of columns : ");
    scanf("%d", &n);

    /* Input data in matrix */
    for (i = 0; i < m; i++)
    {
        for (j = 0; j < n; j++)
        {
            printf("Enter data in [%d][%d]: ", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }

    /* Display the matrix */
    for (i = 0; i < m; i++)
    {
        for (j = 0; j < n; j++)
        {
            printf("%d\t", matrix[i][j]);
        }
        printf("\n");
    }
   
    /*finding the transfose the entered matrix.*/
    
    int TransposeMatrix[10][20];
    
    for(i=0;i<m;i++)
    {for(j=0;j<n;j++)
        TransposeMatrix[j][i]=matrix[i][j];
        }

    
    /* Display the transpose of the  matrix */
    for(i = 0; i < n; i++)
    {
        for (j = 0; j < m; j++)
        {
            printf("%d\t", TransposeMatrix[i][j]);
        }
        printf("\n");
    }
    
    return 0;
}
