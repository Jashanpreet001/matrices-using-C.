#include<stdio.h>

int main(){
    
    int mat[3][3]={1,2,3,4,5,6,7,8,9};
    int i,j,r,c,sod,sou,sol;
    r=c=3;
    sod=sou=sol=0;
    printf("\n Matrix is \n");
    for(i=0;i<=r-1;i++)
    {
        for(j=0;j<=r-1;j++)
        {printf("%d\t",mat[i][j]);
        }
    printf("\n");
        
    }
  
    for(i=0;i<=r-1;i++)
    {
        for(j=0;j<=c-1;j++)
        {
            if(i+j==r-1)
            {sod=sod+mat[i][j];}
            else if(i+j<=r-2)
            {sou=sou+mat[i][j];}
            else if (i+j>=r)
            {sol=sol+mat[i][j];}
            }
    }
    
    printf("\n The sum of the upper triangular matrix is %d",sou);
    printf("\n The sum of the diagonal elements is %d",sod);
    printf("\n The sum of the lower triangular elements is %d",sol);
    
    return 0;
}
