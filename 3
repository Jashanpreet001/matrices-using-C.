#include <iostream>

int main(){
    
    int MatrixA[10][10];
    int i,j,r,c;
    top:
    printf("Enter the number of rows and columns\n");
    scanf("%d%d",&r, &c);
    if(r>10 || c>10)
   {  printf("The maximum rows and columns allowed are 10\n");
    goto top;
   }

    /*enterting data for matrixA*/
   
    printf("Enter %d elements of matrixA:\n",r*c);
    
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        { printf("The element entered at [%d][%d] index:",i,j);
            scanf("%d",&MatrixA[i][j]);}
        }
    
    
    int MatrixB[10][10];
    /*enterting data for matrixB*/
      printf("Enter %d elements of matrixB:\n",r*c);
       
       for(i=0;i<r;i++)
       {
           for(j=0;j<c;j++)
           { printf("The element entered at [%d][%d] index:",i,j);
               scanf("%d",&MatrixB[i][j]);}
           }
    printf("MatrixA:\n");
    for(i=0;i<r;i++)
       {
           for(j=0;j<c;j++)
           { printf("\t%d",MatrixA[i][j]);}
           printf("\n");
           }
    printf("MatrixB:\n");
    for(i=0;i<r;i++)
          {
              for(j=0;j<c;j++)
              { printf("\t%d",MatrixB[i][j]);}
              printf("\n");
              }
    printf("MatrixA+B:\n");
    for(i=0;i<r;i++)
          {
              for(j=0;j<c;j++)
              { printf("\t%d",MatrixA[i][j]+MatrixB[i][j]);}
              printf("\n");
              }
    
    return 0;}
